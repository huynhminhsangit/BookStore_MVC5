
@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
<table>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height: 40px">
            <td>Họ tên khách hàng:</td>
            <td>
                @Html.TextBox("HoTenKH")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td>Tên đăng nhập:</td>
            <td>
                @Html.TextBox("TenDangNhap")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td>Mật khẩu:</td>
            <td>
                @Html.Password("MatKhau")
                @ViewData["Loi3"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td>Mật khẩu nhập lại:</td>
            <td>
                @Html.Password("MatKhauNL")
                @ViewData["Loi4"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td>Ngày sinh:</td>
            <td>
                <input type="date" name="NgaySinh" />
            </td>
        </tr>
        <tr style="height: 40px">
            <td>Điện thoại:</td>
            <td>
                @Html.TextBox("DienThoai")
                @ViewData["Loi5"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td>Email:</td>
            <td>
                @Html.TextBox("Email")
                @ViewData["Loi6"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td>DiaChi:</td>
            <td>
                @Html.TextBox("DiaChi")
            </td>
        </tr>
        <tr style="height: 40px">
            <td></td>
            <td>
                <input type="submit" name="DangKy" value="Đăng ký"/>
            </td>
        </tr>
    }
</table>

